<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".donationActivity">


    <TextView
        android:id="@+id/donationdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/unlock"
        android:text="Donation Drop-Off"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Time Stamp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/shortDescript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="223dp"
        android:ems="10"
        android:hint="Short Description of Item"
        android:inputType="textShortMessage" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="181dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Location"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timeStamp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Description 1"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginStart="3dp"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Description 2"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignBottom="@+id/dollarID"
        android:fontFamily="@font/muli_extralight"
        android:text="Value"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/fullDescript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/shortDescript"
        android:ems="10"
        android:hint="Full Description of Item"
        android:inputType="textLongMessage" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timeStamp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="128dp"
        android:fontFamily="@font/muli_extralight"
        android:text="Category"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/itemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/shortDescript"
        android:ems="10"
        android:hint="Type of item"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shortDescript"
        android:layout_alignTop="@+id/timeStamp"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shortDescript"
        android:layout_alignBottom="@+id/textView7"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:fontFamily="sans-serif"
        android:text="Submit" />

    <EditText
        android:id="@+id/dollarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/shortDescript"
        android:layout_marginBottom="221dp"
        android:ems="10"
        android:hint="Dollar Value"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/viewDonate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#003366"
        android:text="View Donations"
        android:textColor="#ffffff" />

</RelativeLayout>