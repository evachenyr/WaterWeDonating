<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity">
3
    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="164dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/companylogo" />

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="234dp"
        android:background="@drawable/et_box"
        android:ems="10"














































        android:fontFamily="sans-serif"
        android:hint="  Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="256dp"
        android:background="@drawable/et_box"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="  Password"
        android:inputType="textPassword"
        android:src="@drawable/password_icon" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Register Here"
        android:background="#00FFFFFF"/>

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/txt_username"
        android:layout_toStartOf="@+id/txt_username"
        android:src="@drawable/user_icon" />

    <ImageView
        android:id="@+id/password_icon"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/txt_password"
        android:layout_toStartOf="@+id/txt_username"
        android:src="@drawable/password_icon" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp"
        android:background="@drawable/et_loginbox"
        android:text="Login" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="212dp"
        android:textColor="#FFFFFF" />
</RelativeLayout>